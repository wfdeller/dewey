# Dewey Backend Environment Configuration
# Copy this file to .env and fill in the values

# Application
APP_NAME=Dewey
DEBUG=true
ENVIRONMENT=development

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your-secret-key-min-32-chars-long-here

# Database
DATABASE_URL=postgresql://dewey:dewey@localhost:5432/dewey

# Redis
REDIS_URL=redis://localhost:6379/0

# AI Providers (configure at least one)
DEFAULT_AI_PROVIDER=claude
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Ollama (for self-hosted models)
OLLAMA_BASE_URL=http://localhost:11434

# Microsoft Graph API (for O365 integration)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# CORS (comma-separated origins)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Logging
LOG_LEVEL=INFO
LOG_JSON=false
